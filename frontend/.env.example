# ==========================================
# MoodMunch Frontend - Environment Variables
# ==========================================

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# App Configuration
REACT_APP_APP_NAME=MoodMunch
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_TAGLINE=Cook What You Feel! ðŸ’•

# Features
REACT_APP_ENABLE_VOICE_INPUT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DARK_MODE=true

# Audio Recording Settings
REACT_APP_MAX_AUDIO_DURATION=60
REACT_APP_AUDIO_SAMPLE_RATE=44100

# Pagination
REACT_APP_RECIPES_PER_PAGE=12
REACT_APP_HISTORY_PER_PAGE=10

# Local Storage Keys
REACT_APP_STORAGE_PREFIX=moodmunch_

# Development/Debug
REACT_APP_DEBUG=false
REACT_APP_ENABLE_CONSOLE_LOGS=false

# Optional: External Services (if needed in future)
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_SENTRY_DSN=
# REACT_APP_FIREBASE_API_KEY=